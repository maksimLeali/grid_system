{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2019",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": false
  },
  "include": ["src"]
}
