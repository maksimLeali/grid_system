{
  "compilerOptions": {
    // Make sure it resolves modules like Node
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2019",
    "jsx": "react", 
    // For default imports like `import React from 'react'`
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // If you import .json files
    "resolveJsonModule": true,

    // Good for strict TypeScript
    "strict": true,
    "noImplicitAny": true,

    // Generate .d.ts
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": false
  },
  "include": ["src"]
}
